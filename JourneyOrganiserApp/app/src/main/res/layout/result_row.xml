<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/transit_mode"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:contentDescription="Image" />

    <TextView
        android:id="@+id/depart_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/transit_mode"
        android:layout_marginStart="10dp"
        android:text="Departure:"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:id="@+id/depart_at_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/depart_at"
        android:layout_toEndOf="@+id/transit_mode"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:id="@+id/arrive_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/depart_at_result"
        android:layout_toEndOf="@+id/transit_mode"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:text="Arrive at:"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:id="@+id/arrive_at_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arrive_at"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/transit_mode"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/depart_at"
        android:text="Duration:"
        android:layout_marginStart="90dp"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/depart_at"
        android:layout_below="@+id/time_label"
        android:layout_marginStart="90dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:id="@+id/distance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/depart_at"
        android:layout_below="@+id/time"
        android:text="Distance:"
        android:layout_marginStart="90dp"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/depart_at"
        android:layout_below="@+id/distance_label"
        android:layout_marginStart="90dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/distance"
        android:text="Price:"
        android:layout_marginStart="90dp"
        android:layout_toEndOf="@+id/depart_at"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_label"
        android:layout_marginStart="90dp"
        android:layout_toEndOf="@+id/depart_at"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/background_light"/>

</RelativeLayout>