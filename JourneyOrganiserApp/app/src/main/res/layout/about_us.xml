<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:background="@color/backgroundColor"
    android:clickable="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/jo_logo"
        android:layout_marginTop="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/about_us_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_us_text"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/button_color"
                android:gravity="center"/>

            <TextView
                android:id="@+id/authors_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:text="@string/about_us_authors_title"
                android:textSize="25sp"
                android:textColor="@color/button_color"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/authors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/about_us_authors_text"
                android:textSize="20sp"
                android:textColor="@color/button_color" />

            <TextView
                android:id="@+id/copyright_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/copyright_r2r"
                android:textSize="25sp"
                android:textColor="@color/button_color"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/copyright_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copyright_text_google"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/button_color"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/copyright_r2r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copyright_text_r2r"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/button_color"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>