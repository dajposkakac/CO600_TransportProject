<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"/>
        <!-- The main content view -->
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignBounds"
                android:orientation="horizontal"
                android:padding="16dp"
                android:useDefaultMargins="true" >

                <TextView
                    android:id="@+id/from_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="From"
                    android:textColor="?android:textColorSecondary" />

                <LinearLayout
                    android:id="@+id/from_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/from_label"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:layout_marginTop="@dimen/label_margin">

                    <AutoCompleteTextView
                        android:id="@+id/from"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:completionThreshold="3" />

                    <Button
                        android:id="@+id/from_map"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="map"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/to_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/from_layout"
                    android:text="To"
                    android:textColor="?android:textColorSecondary"
                    />

                <LinearLayout
                    android:id="@+id/to_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/to_label"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/label_margin">

                    <AutoCompleteTextView
                        android:id="@+id/to"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:completionThreshold="3" />

                    <Button
                        android:id="@+id/to_map"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="map"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/to_layout"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/default_margin">

                    <Spinner
                        android:id="@+id/dateSpinner"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:layout_width="150dp" />

                    <EditText
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center_horizontal"
                        android:textIsSelectable="true"
                        android:focusableInTouchMode="false"
                        android:hint="Time"/>

                    <EditText
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="center_horizontal"
                        android:textIsSelectable="true"
                        android:focusableInTouchMode="false"
                        android:hint="Date"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/preferences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_layout"
                    android:weightSum="1"
                    android:layout_marginBottom="@dimen/default_margin">

                    <LinearLayout
                        android:id="@+id/transit_mode_preferences"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/transit_modes_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transit Mode:"
                            android:textColor="?android:textColorSecondary" />

                        <Spinner
                            android:id="@+id/transit_modes_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sorting_preferences"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/sorting_preference_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sort by:"
                            android:textColor="?android:textColorSecondary"/>

                        <Spinner
                            android:id="@+id/sorting_preference_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/go"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/preferences"
                    android:layout_gravity="fill_horizontal"
                    android:text="Show Travel Options" />

                <TextView
                    android:id="@+id/loading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/go"
                    android:text="Loading..."
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"/>

            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>

</android.support.v4.widget.DrawerLayout>